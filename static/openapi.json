{
  "openapi": "3.0.2",
  "info": {
    "version": "1.0.0",
    "title": "JavaScript REST API Documentation",
    "description": "REST API documentation for JavaScript learning and practice project"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local Development Server"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "description": "Basic liveness probe - returns server status",
        "summary": "Basic health check",
        "tags": ["Health"],
        "operationId": "getHealth",
        "responses": {
          "200": {
            "description": "Server is running",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "OK"
                    },
                    "uptime": {
                      "type": "number",
                      "description": "Server uptime in seconds"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "env": {
                      "type": "string",
                      "description": "Current environment"
                    }
                  },
                  "required": ["status", "uptime", "timestamp", "env"]
                }
              }
            }
          }
        }
      }
    },
    "/health/deep": {
      "get": {
        "description": "Deep readiness probe - checks database and other dependencies",
        "summary": "Deep health check",
        "tags": ["Health"],
        "operationId": "getDeepHealth",
        "responses": {
          "200": {
            "description": "All checks passed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "OK"
                    },
                    "checks": {
                      "type": "object",
                      "properties": {
                        "server": {
                          "type": "string",
                          "example": "ok"
                        },
                        "database": {
                          "type": "string",
                          "example": "ok"
                        }
                      },
                      "required": ["server", "database"]
                    }
                  },
                  "required": ["status", "checks"]
                }
              }
            }
          },
          "503": {
            "description": "Service unavailable - one or more checks failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "FAIL"
                    },
                    "checks": {
                      "type": "object",
                      "properties": {
                        "server": {
                          "type": "string"
                        },
                        "database": {
                          "type": "string"
                        }
                      }
                    },
                    "error": {
                      "type": "string",
                      "description": "Error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/greet": {
      "get": {
        "description": "Get all greetings",
        "summary": "List all greetings",
        "tags": ["Greet"],
        "operationId": "getAllGreetings",
        "responses": {
          "200": {
            "description": "List of all greetings",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "message": {
                        "type": "string"
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Create a new greeting",
        "summary": "Create greeting",
        "tags": ["Greet"],
        "operationId": "createGreeting",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "description": "Greeting message",
                    "example": "Hello, World!"
                  }
                },
                "required": ["message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Greeting created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    },
                    "createdAt": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "x-service-token": {
        "type": "apiKey",
        "name": "x-service-token",
        "in": "header"
      }
    }
  }
}
